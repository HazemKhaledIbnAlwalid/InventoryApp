<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/in_stock_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="in_stock"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@+id/item_name_tv"
        android:layout_alignLeft="@+id/item_name_tv"
        android:layout_alignStart="@+id/item_name_tv"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Price$"
        android:layout_alignBottom="@+id/buy_button"
        android:layout_alignRight="@+id/in_stock_tv"
        android:layout_alignEnd="@+id/in_stock_tv"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <Button
        android:id="@+id/buy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="67dp"
        android:layout_marginRight="67dp"
        android:layout_marginTop="28dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Buy"
        android:onClick=""
        android:layout_below="@+id/item_name_tv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>